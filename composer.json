{
    "name": "painless-php/package-boilerplate-devkit",
    "description": "Core functionality for creating packages using package-boilerplate",
    "type": "library",
    "require": {
        "php": ">=8.1",
        "bartlett/php-compatinfo": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "vlucas/phpdotenv": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "PainlessPHP\\Package\\Boilerplate\\Devkit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "./vendor/bin/phpunit"
    }
}
